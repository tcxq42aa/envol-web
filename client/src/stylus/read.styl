.read-container
  position relative
  padding-bottom 120px
.audio-wrap
  position fixed
  bottom 0
  left 0
  width 100%
  .btn--floating
    width 32px
.btn__test-wrap
  padding 40px 30px
.btn__test
  font-size 16px
  margin 0 auto
  width 100%
  height 50px
  line-height 50px
  &.btn--disabled
    opacity .5
.audio-panel
  background #fff
  display flex
  align-items center
  padding 15px 30px
  justify-content space-between
.audio-progress
  position relative
  height: 5px;
  background: rgb(216,216,216);
  .audio-progress-line
    position absolute
    height 5px
    background: rgb(252, 147, 61)
    top 0
    left 0
    width  50%
  .audio-progress-point
    position absolute
    display block
    width 25px
    height 25px
    background rgb( 252, 147, 61)
    box-shadow inset 0 0 0 5px #fff,0 1px 2px rgba(0,0,0,0.2)
    border-radius 50%
    top -11px
    left 50%
  //rgb 252 147 61
.audio-current
  vertical-align middle
.audio-icon
  font-size 30px
.read-handout-entry
  position: absolute;
  top: 12px;
  right: 0;
  color #fff
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  padding: 3px 7px 2px 10px;
  font-size: 13px;

.badge-card {
  box-shadow 0 5px 20px rgb(252, 148, 60)
  margin-top 15px
  padding 35px 33px
}
.badge-header {
  display flex
  align-items center
  justify-content center
  color rgb(153,153,153)
  margin-bottom 40px
}
.badge-line {
  width 70px
  position relative
  height 1px
  margin 0 10px
  background rgb(216,216,216)
}
.badge-line::before {
  position absolute
  display block
  content ' '
  right 0
  top -1px
  width 3px
  height 3px
  border-radius 50%
  background rgb(216,216,216)
}
.badge-line:last-child::before {
  left 0
}

.badge-body
  font-size 0
  .badge-item
    display inline-block
    text-align center
    width 33.33%
    margin-bottom 30px;
    p
      font-size 14px;
      margin 13px 0 0
.badge-body + .badge-header
  margin-top 10px;

.badge-dialog
  min-height: 375px;
  padding-top: 70px;
  padding-bottom: 100px;
  position: relative;
  background: #fff;
  overflow-y: visible;
  border-radius 10px
  .badge-img
    position absolute
    top: -50px;
    left: 50%;
    margin-left: -50px;
  .badge-header
    font-size 16px
    text-align: center;
    font-weight: bold;
    margin-bottom 18px
    color #333
  .badge-content
    font-size 14px
    line-height 2
    text-align center
.btn-timeline
  font-size: 16px;
  margin: 0 auto;
  height: 50px;
  line-height: 50px;
  position: absolute;
  bottom: 36px;
  width: 230px;
  left: 50%;
  margin-left: -115px;
.share-layer {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.8);
  text-align right;
  .share-content {
    margin-right 44px;
    display: inline-block;
    text-align: right;
  }
}

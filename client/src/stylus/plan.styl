.plan-status
  padding-left 10px
  display flex
  align-items  center
  justify-content center
  color rgb(153, 153, 153)
.point
  margin-left 8px
  display block
  width 13px
  height 13px
  border-radius 50%
  box-shadow 0 1px 5px rgba(219, 219, 219, 0.8)
  background linear-gradient(to right, rgb(255,213,68), rgb(255,231,18))
.point-1
  @extend .point
  background #fff

.point-2
  @extend .point
  background #fff
  box-shadow inset 0 0 0 2px rgb(255,231,18), 0 1px 5px rgba(219, 219, 219, 0.8)
.plan-panel
  position relative
  height 300px
  padding 15px
  box-shadow 0 2px 10px rgba(252,147,61,0.8)
  &::before,
  &::after
    content: ' ';
    position: absolute;
    left: 15px;
    right: 15px;
    display: block;
    height: 10px;
    bottom: -10px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    background: linear-gradient(to right, #fc933d, #ffb531);
    opacity: .75;
    box-shadow: 0 2px 10px rgba(252,147,61,0.6);
    z-index: 0;
  &::after
    left 30px
    right 30px
    bottom -20px
    opacity .4

.calender-panel
  position relative
  z-index 1
.calender-year
  position: absolute;
  z-index 0
  left: -26px;
  top: -5px;
  line-height: 1;
  font-size: 140px;
  opacity: .15;
  font-weight: bold;
  color: #fff;

.month-title,
.week-title,
.day-title
  color #fff

.week-wrap,
.day-wrap
  margin-top 30px
  font-size 0

.month-title
  line-height 1.2
  font-size 20px
  text-align center
.week-title,
.day-title
  font-size 15px
  width 14.28%
  display inline-block
  text-align center

.day-wrap
  margin-top 10px
.day-title
  margin-bottom 5px
  text-align center
.day
  height 30px
  line-height 30px
  width 30px
  display inline-block
  border-radius: 50%;
.day.finished
  background linear-gradient(to bottom, rgb(255 213 68), rgb(255,231,18))
  box-shadow 0 1px 5px rgb(252, 147, 61)
.day.unfinished
  background transparent
  box-shadow inset 0 0 0 2px #ffe712, 0 1px 5px rgb(252, 147, 61)
.day.white-bg
  color rgb(253, 151, 60)
  background #fff
  box-shadow 0 1px 5px rgb(252, 147, 61)

.btn-link
  display flex
  align-items center
  justify-content space-around
  a
    text-decoration none
    color rgb(153, 153, 153)

.book-list
  display flex
  overflow auto
  .book-item
    flex-basis 88px
    text-align center
    flex-shrink 0
    font-size 14px
    line-height 20px
    .book-media
      img
        box-shadow 0 1px 5px rgba(0,0,0,.2)
        display block
        width 80%;
        margin auto
    .small
      margin 6px 0 4px
      font-size 13px
      line-height 18px
      color rgb(153, 153, 153)
.month-title
  display flex
  justify-content space-between
  .prev,.next
    width 30px
    height: 24px;
    line-height: 24px;

.index-panel
  height 320px
  margin -16px
  padding-top 35px
  text-align center
  position relative
  margin-bottom -60px
.index-avatar
  margin auto
  display block
  box-shadow 0 1px 5px rgb(255,118,39)

.seg-vert-small
  position relative
  &::after
    content: ' ';
    display: block;
    position: absolute;
    width: 1px;
    top: 12px;
    right: 0;
    height: calc(100% - 27px);
    background-color: #fff;
    transform: scaleX(.5)
.tractate p
  margin-bottom 0

.btn--active img
  height 30px

.handout-entry
  position: absolute;
  top: 20px;
  right: 0;
  color #fc933d
  background: #fff;
  border-top-left-radius: 13px;
  border-bottom-left-radius: 13px;
  padding: 3px 7px 2px 10px;
  font-size: 13px;


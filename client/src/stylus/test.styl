.test-container
  overflow hidden
.test-list
  margin 43px -16px 0
  display flex
  align-items start
  transition transform .25s ease-out
.test-card
  background #fff
  border-radius  10px
  position relative
  width 90%
  flex-shrink 0
  margin-left 5%
  box-shadow 0 5px 20px rgb(252, 148, 60)
  padding 80px 0 30px
.test-card.word-list-card
  padding-top 60px
.test-tag
  position absolute
  right 0
  top 20px
  background rgb(240,240,240)
  font-size 15px
  padding 0 10px
  height 22px
  line-height 22px
  text-align center
  border-top-left-radius 10px!important
  border-top-right-radius 0!important
  border-bottom-left-radius 10px!important
  border-bottom-right-radius 0!important
.test-title
  font-size 16px
  font-weight bold
  padding 0 45px
  margin-bottom 25px
.test-detail
  list-style none
  padding 0
  overflow: auto;
  li
    position relative
    min-height 56px
    line-height 1.5
    padding 16px 45px
    font-size 16px
    color rgb(153,153,153)
    &:active,&.active
      color rgb(252, 147, 61)
      background rgb(240,240,240)
  li + li
    &::after
      display block
      content ' '
      position absolute
      top 0
      height 1px
      left 45px
      background #eee
      right 0
  .text
    color #333
    font-weight 400
  .comment
    font-size 14px
.btn__next-wrap
  padding 20px 45px 0
.btn__next
  font-size 16px
  margin 0 auto
  width 100%
  height 50px
  line-height 50px
  &.btn--disabled
    opacity .5

.test-result-wrap.card
  color #fff
  font-size 15px
  display flex
  align-items center
  justify-content space-between
  & > :nth-child(2)
    text-align center
  .result-percent
    font-size 30px
.result-card
  padding 50px 0 10px
.result-item
  display: flex;
  justify-content: space-between;
.bl-orange
  flex-grow 1
  line-height 1
  flex-basis 0
  border-radius 0!important
  padding-left 12px
  border-left 2px solid rgb(252, 147, 61)
.btn-share
  position fixed
  bottom 0
  left 0
  width 100%
  text-align center
  height 48px
  line-height 48px
  font-size 16px
  color #fff

.test-land-wrap.card
  align-items center
  justify-content space-between
  padding-top 26px
  padding-bottom 70px
  color #fff
  font-size 16px
  text-align center
  h3
    font-size 19px
    line-height 36px
    margin-bottom 0
    margin-top 10px
  p
    line-height 2
  .uc-avatar-land
    margin 33px 0 48px 0
  .book-wrapper
    color #333
    margin-bottom 20px
    display flex
    align-items flex-start
    padding 0 25px
  .book-wrapper img {
    border-radius 4px
    width 75px
    height 110px
    flex-shrink 0
  }
  .book-wrapper .book-right {
    flex-grow:1;
    padding-left 25px
    display flex
    flex-direction column
    height 110px
    justify-content space-between
  }
  .book-desc
    color #333
    text-align left
    padding 0 25px
.btn-test
  position relative
  width 80%
  height 58px
  font-size 16px
  margin -50px auto 0!important
  box-shadow 0 2px 25px 0 rgba(252, 147, 61, 0.8)

.btn-test-disabled
  pointer-events none
  background #e9e9e9!important
.btn__in__dialog
  width 80%
  margin-left auto
  margin-right auto